---
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title: string;
  description1: string;
  description2: string;
  description3: string;
  description4: string;
}

const { title, description1, description2, description3, description4 } =
  Astro.props;
---

<div
  class="p-5 sm:p-6 lg:p-8 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative overflow-hidden"
>
  <div class="text-heading-1 w-max relative">
    <!-- <slot name="icon" /> -->
  </div>
  <div class="space-y-4 relative text-center">
    <Title class="text-lg md:text-xl font-semibold text-heading-2">
      {title}
    </Title>
    <Paragraph>
      <span>{description1}</span><br />
      <span>{description2}</span><br />
      <span>{description3}</span><br />
      <span>{description4}</span><br />
    </Paragraph>
  </div>
  <span
    class="absolute w-32 aspect-square -bottom-16 -right-16 bg-primary/10 rounded-full"
  ></span>
</div>
